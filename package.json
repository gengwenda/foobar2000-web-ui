{
    "name": "foobar2000-web-ui",
    "version": "0.1.0",
    "author": "Matias Klemola <matias.klemola@gmail.com>",
    "description": "Control foobar2000 from the web.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/klemola/foobar2000-web-ui.git"
    },
    "keywords": [
        "foobar2000",
        "remote control",
        "server"
    ],
    "scripts": {
        "copy-files": "shx mkdir -p ./build/static && shx cp -r ./ui/{css,vendor,fonts} ./build/static/ && shx cp -r ./server/templates ./build/",
        "build-ui": "tsc -p ui/tsconfig.json",
        "build-server": "tsc -p server/tsconfig.json",
        "build": "yarn copy-files && yarn build-server && yarn build-ui",
        "test-server": "mocha --exit ./build/**/*.test.js",
        "start": "node build/main.js",
        "test": "yarn test-server",
        "format": "prettier --write server/**/*.ts ui/**/*.ts"
    },
    "dependencies": {
        "body-parser": "1.19.0",
        "express": "4.16.4",
        "jade": "1.11.0",
        "prelude-ts": "0.8.2",
        "runtypes": "4.0.0",
        "socket.io": "2.2.0",
        "socket.io-client": "1.7.1",
        "winston": "3.2.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.0",
        "@types/chai": "^4.1.7",
        "@types/express": "^4.16.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^12.0.2",
        "@types/socket.io": "^2.1.2",
        "@types/socket.io-client": "^1.4.32",
        "@types/winston": "^2.4.4",
        "chai": "4.2.0",
        "mocha": "6.1.4",
        "prettier": "1.17.0",
        "shx": "0.3.2",
        "typescript": "3.5.1"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true
    },
    "engines": {
        "node": ">=12.1.0"
    }
}
