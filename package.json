{
    "name": "foobar2000-web-ui",
    "version": "0.1.0",
    "author": "Matias Klemola <matias.klemola@gmail.com>",
    "description": "Control foobar2000 from the web.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/klemola/foobar2000-web-ui.git"
    },
    "keywords": [
        "foobar2000",
        "remote control",
        "server"
    ],
    "scripts": {
        "build-ui": "webpack --config webpack.config.js",
        "build-server": "tsc -p server/tsconfig.json",
        "build": "yarn build-server && yarn build-ui",
        "test-server": "mocha --exit ./build/**/*.test.js",
        "start": "node build/main.js",
        "test": "yarn build && yarn test-server",
        "format": "prettier --write server/**/*.ts ui/**/*.ts"
    },
    "dependencies": {
        "body-parser": "1.19.0",
        "express": "4.16.4",
        "preact": "8.4.2",
        "prelude-ts": "0.8.2",
        "runtypes": "4.0.0",
        "socket.io": "2.2.0",
        "socket.io-client": "2.2.0",
        "winston": "3.2.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.0",
        "@types/chai": "^4.1.7",
        "@types/express": "^4.16.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^12.0.2",
        "@types/socket.io": "^2.1.2",
        "@types/socket.io-client": "^1.4.32",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "chai": "4.2.0",
        "eslint": "6.1.0",
        "fork-ts-checker-webpack-plugin": "1.4.3",
        "html-webpack-plugin": "^3.2.0",
        "mocha": "6.1.4",
        "prettier": "1.17.0",
        "ts-loader": "6.0.4",
        "typescript": "3.5.2",
        "webpack": "4.39.0",
        "webpack-cli": "3.3.6"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true
    },
    "engines": {
        "node": ">=12.1.0"
    }
}
